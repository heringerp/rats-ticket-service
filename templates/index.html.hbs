<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="stylesheet" href="/css/indexstyle.css">
        <title>RATS: Ticket System</title>
    </head>
    <body>
      <h4>RATS: Tickets</h4>
                {{#if flash}}
                    <p>Meldung: {{ flash }}</p>
                {{else}}
                    <p></p>
                {{/if}}
        <a href="/new">Eine neue Anfrage stellen</a>
        <h5>Zu genehmigende Anfragen:</h5>
                        <table class="Maintabelle">
                          {{#each approval_ticket}}
                          <tr>
                            <td><a href="/{{ this.filename }}">{{ this.description }}</a></td>
                            <td>
                              <form class="inline" action="/ticket/{{this.id}}" method="post">
                                <input type="hidden" name="_method" value="put" />
                                <button class="btn small" type="submit">Erlauben</button>
                              </form>
                            </td>
                            <td>
                              <form class="inline" action="/ticket/{{this.id}}" method="post">
                                <input type="hidden" name="_method" value="delete" />
                                <button class="btn primary small" type="submit">Ablehnen</button>
                              </form>
                            </td>
                          </tr>
                          {{/each}}
                        </table>
                          <hr>
                    <h5>Ihre Anfragen:</h5>
                  <div class="anfragen">
                        <table class="Maintabelle">
                          {{#each request_ticket}}
                          <tr>
                            <td><a href="/{{ this.filename }}">{{ this.description }}</a></td>
                            <td>
                              <form id="delete" action="/ticket/{{this.id}}" method="post">
                                  <input type="hidden" name="_method" value="delete" />
                                  <button class="btn primary small" type="submit">LÃ¶schen</button>
                              </form>
                            </td>
                          </tr>
                          {{/each}}
                        </table>
                          <br>
                  </div>
            <form action="/logout" method="post" accept-charset="utf-8">
                <button class="button" type="submit" value="logout"><span>Logout</span></button><br>
            </form>
    </body>
</html>
